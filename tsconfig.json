{
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "./src/ts/*.ts",
  ],
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs", 
    "lib": ["es5","es6"], 
    "outDir": "./build", 
    "strict": true, 
    "moduleResolution": "node",           
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true, 
    "inlineSourceMap": true,              
    "experimentalDecorators": true,       
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true 
  }
}